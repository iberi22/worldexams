---
import SubjectIcons from './SubjectIcons.astro';

interface Props {
  grade: string;
  title: string;
  description: string;
  subjects: string[];
  duration: string;
  questions: string;
  highlight?: boolean;
}

const { grade, title, description, subjects, duration, questions, highlight = false } = Astro.props;
---

<article class:list={[
  "grade-card",
  "border rounded-lg p-6 transition-all duration-300",
  highlight
    ? "bg-[#F5F5DC]/10 border-[#F5F5DC] hover:bg-[#F5F5DC]/15"
    : "bg-[#1a1a1a] border-white/10 hover:border-white/30"
]}>
  <div class="flex items-start gap-4 mb-4">
    <div class:list={[
      "grade-badge",
      "w-16 h-16 rounded-full flex items-center justify-center font-bold text-xl relative",
      highlight
        ? "bg-[#F5F5DC] text-[#121212]"
        : "border-2 border-white/40 text-[#F5F5DC]"
    ]}>
      {grade}
      {highlight && (
        <span class="absolute -top-1 -right-1 w-4 h-4 bg-[#FCD116] rounded-full flex items-center justify-center">
          <svg class="w-2.5 h-2.5 text-[#121212]" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </span>
      )}
    </div>
    <div class="flex-1">
      <h3 class="text-lg font-bold mb-1">{title}</h3>
      <p class="text-sm text-white/60">{description}</p>
    </div>
  </div>

  <div class="space-y-4">
    <!-- Subjects with icons -->
    <div>
      <h4 class="text-xs uppercase tracking-wide text-white/40 mb-2">√Åreas Evaluadas</h4>
      <div class="flex flex-wrap gap-2">
        {subjects.map((subject) => (
          <span class:list={[
            "inline-flex items-center gap-1.5 px-2 py-1 text-xs rounded",
            highlight
              ? "bg-[#F5F5DC]/20 text-[#F5F5DC]"
              : "bg-white/5 text-white/70"
          ]}>
            <SubjectIcons subject={subject} size="sm" />
            {subject}
          </span>
        ))}
      </div>
    </div>

    <!-- Stats -->
    <div class="flex gap-6 pt-4 border-t border-white/10">
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-white/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-sm text-white/60">{duration}</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-white/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        <span class="text-sm text-white/60">{questions}</span>
      </div>
    </div>
  </div>
</article>

<style>
  .grade-card {
    font-family: 'Fira Code', monospace;
    position: relative;
    overflow: hidden;
  }

  .grade-card::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #FCD116, #003893, #CE1126);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .grade-card:hover::after {
    transform: scaleX(1);
  }

  .grade-badge {
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }

  .grade-card:hover .grade-badge {
    transform: scale(1.05);
  }
</style>
