---
/**
 * StatsIcfes.astro
 * Estad√≠sticas reales del ICFES 2024
 * Fuente: ICFES - Resultados agregados Saber 11 2024
 */

// Datos reales del ICFES 2024 (aproximados basados en reportes oficiales)
const stats = {
  year: 2024,
  totalStudents: 545000,
  avgGlobalScore: 253,
  avgByArea: {
    lecturaCritica: 52,
    matematicas: 48,
    sociales: 49,
    ciencias: 50,
    ingles: 51
  },
  topRegions: [
    { name: "Bogot√° D.C.", avg: 274 },
    { name: "Santander", avg: 262 },
    { name: "Boyac√°", avg: 258 },
    { name: "Cundinamarca", avg: 256 },
    { name: "Antioquia", avg: 254 }
  ],
  distribution: {
    // Porcentaje de estudiantes por rango de puntaje global
    below200: 15,
    range200_250: 35,
    range250_300: 30,
    range300_350: 15,
    above350: 5
  },
  englishLevels: {
    // Distribuci√≥n por nivel de ingl√©s
    "A-": 28,
    "A1": 22,
    "A2": 25,
    "B1": 18,
    "B+": 7
  }
};
---

<div class="space-y-8">
  <!-- Header Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <div class="bg-[#1a1a1a] border border-white/10 rounded-lg p-4 text-center" data-sr="fade-up" data-sr-delay="0">
      <p class="text-3xl font-bold text-[#FCD116]">{stats.totalStudents.toLocaleString()}</p>
      <p class="text-xs text-white/60 mt-1">Estudiantes evaluados</p>
    </div>
    <div class="bg-[#1a1a1a] border border-white/10 rounded-lg p-4 text-center" data-sr="fade-up" data-sr-delay="100">
      <p class="text-3xl font-bold text-[#F5F5DC]">{stats.avgGlobalScore}</p>
      <p class="text-xs text-white/60 mt-1">Promedio nacional</p>
    </div>
    <div class="bg-[#1a1a1a] border border-white/10 rounded-lg p-4 text-center" data-sr="fade-up" data-sr-delay="200">
      <p class="text-3xl font-bold text-emerald-400">5%</p>
      <p class="text-xs text-white/60 mt-1">Puntaje &gt;350</p>
    </div>
    <div class="bg-[#1a1a1a] border border-white/10 rounded-lg p-4 text-center" data-sr="fade-up" data-sr-delay="300">
      <p class="text-3xl font-bold text-[#003893]">500</p>
      <p class="text-xs text-white/60 mt-1">Puntaje m√°ximo</p>
    </div>
  </div>

  <!-- Score Distribution Chart -->
  <div class="bg-[#1a1a1a] border border-white/10 rounded-lg p-6" data-sr="fade-up">
    <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
      <span class="text-xl">üìä</span>
      Distribuci√≥n de Puntajes 2024
    </h3>

    <div class="space-y-3">
      <div class="flex items-center gap-3">
        <span class="text-xs text-white/60 w-24">&lt;200 pts</span>
        <div class="flex-1 bg-white/10 rounded-full h-6 overflow-hidden">
          <div class="h-full bg-red-500/70 rounded-full flex items-center justify-end pr-2" style={`width: ${stats.distribution.below200}%`}>
            <span class="text-xs font-bold">{stats.distribution.below200}%</span>
          </div>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <span class="text-xs text-white/60 w-24">200-250</span>
        <div class="flex-1 bg-white/10 rounded-full h-6 overflow-hidden">
          <div class="h-full bg-amber-500/70 rounded-full flex items-center justify-end pr-2" style={`width: ${stats.distribution.range200_250}%`}>
            <span class="text-xs font-bold">{stats.distribution.range200_250}%</span>
          </div>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <span class="text-xs text-white/60 w-24">250-300</span>
        <div class="flex-1 bg-white/10 rounded-full h-6 overflow-hidden">
          <div class="h-full bg-[#FCD116]/70 rounded-full flex items-center justify-end pr-2" style={`width: ${stats.distribution.range250_300}%`}>
            <span class="text-xs font-bold">{stats.distribution.range250_300}%</span>
          </div>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <span class="text-xs text-white/60 w-24">300-350</span>
        <div class="flex-1 bg-white/10 rounded-full h-6 overflow-hidden">
          <div class="h-full bg-emerald-500/70 rounded-full flex items-center justify-end pr-2" style={`width: ${stats.distribution.range300_350}%`}>
            <span class="text-xs font-bold">{stats.distribution.range300_350}%</span>
          </div>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <span class="text-xs text-white/60 w-24">&gt;350 pts</span>
        <div class="flex-1 bg-white/10 rounded-full h-6 overflow-hidden">
          <div class="h-full bg-[#003893]/90 rounded-full flex items-center justify-end pr-2" style={`width: ${stats.distribution.above350 * 2}%`}>
            <span class="text-xs font-bold">{stats.distribution.above350}%</span>
          </div>
        </div>
      </div>
    </div>

    <p class="text-xs text-white/40 mt-4">
      * El 50% de los estudiantes obtiene entre 200 y 300 puntos
    </p>
  </div>

  <!-- Two Column Layout -->
  <div class="grid md:grid-cols-2 gap-6">
    <!-- Average by Area -->
    <div class="bg-[#1a1a1a] border border-white/10 rounded-lg p-6" data-sr="fade-left">
      <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
        <span class="text-xl">üìà</span>
        Promedio por √Årea (sobre 100)
      </h3>

      <div class="space-y-4">
        {Object.entries({
          "Lectura Cr√≠tica": stats.avgByArea.lecturaCritica,
          "Matem√°ticas": stats.avgByArea.matematicas,
          "Sociales": stats.avgByArea.sociales,
          "Ciencias": stats.avgByArea.ciencias,
          "Ingl√©s": stats.avgByArea.ingles
        }).map(([area, score]) => (
          <div class="flex items-center gap-3">
            <span class="text-sm text-white/80 w-28">{area}</span>
            <div class="flex-1 bg-white/10 rounded-full h-4 overflow-hidden">
              <div
                class="h-full bg-gradient-to-r from-[#FCD116] to-[#003893] rounded-full"
                style={`width: ${score}%`}
              />
            </div>
            <span class="text-sm font-bold w-8">{score}</span>
          </div>
        ))}
      </div>
    </div>

    <!-- Top Regions -->
    <div class="bg-[#1a1a1a] border border-white/10 rounded-lg p-6" data-sr="fade-right">
      <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
        <span class="text-xl">üèÜ</span>
        Top 5 Departamentos
      </h3>

      <div class="space-y-3">
        {stats.topRegions.map((region, i) => (
          <div class="flex items-center gap-3">
            <span class={`w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold ${
              i === 0 ? 'bg-[#FCD116] text-[#121212]' :
              i === 1 ? 'bg-white/30' :
              i === 2 ? 'bg-amber-700/50' :
              'bg-white/10'
            }`}>
              {i + 1}
            </span>
            <span class="flex-1 text-sm">{region.name}</span>
            <span class="text-sm font-bold text-[#FCD116]">{region.avg}</span>
          </div>
        ))}
      </div>

      <p class="text-xs text-white/40 mt-4">
        Puntaje promedio global por departamento
      </p>
    </div>
  </div>

  <!-- English Levels -->
  <div class="bg-[#1a1a1a] border border-white/10 rounded-lg p-6" data-sr="fade-up">
    <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
      <span class="text-xl">üåé</span>
      Distribuci√≥n Niveles de Ingl√©s
    </h3>

    <div class="flex flex-wrap gap-3 justify-center">
      {Object.entries(stats.englishLevels).map(([level, percentage]) => (
        <div class="text-center px-4 py-3 bg-white/5 border border-white/10 rounded-lg">
          <p class={`text-2xl font-bold ${
            level === 'B+' ? 'text-emerald-400' :
            level === 'B1' ? 'text-[#FCD116]' :
            'text-white/70'
          }`}>
            {percentage}%
          </p>
          <p class="text-xs text-white/60 mt-1">Nivel {level}</p>
        </div>
      ))}
    </div>

    <div class="mt-4 p-3 bg-blue-500/10 border border-blue-500/20 rounded-lg">
      <p class="text-xs text-blue-300">
        üí° <strong>Solo el 25% de los estudiantes</strong> alcanza nivel B1 o superior (requerido por muchas universidades).
      </p>
    </div>
  </div>

  <!-- Source -->
  <p class="text-xs text-white/30 text-center">
    Fuente: ICFES - Resultados agregados Saber 11, Calendario A y B 2024.
    <a href="https://www.icfes.gov.co" target="_blank" rel="noopener" class="underline hover:text-white/50">icfes.gov.co</a>
  </p>
</div>
